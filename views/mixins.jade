mixin model_link(name, description, views, url)
    .pure-g-r.model-list(style="margin-bottom:10px")
        .pure-u-1-4(style="max-height:150px")
            img.model-image(src="http://placehold.it/150x150")
        .pure-u-3-4(style="max-height:150px")
            a(href='#{url}')
                h4 #{name}
            | #{description}
            p
                |Views: #{views}

mixin purchase_link_row_header()
    thead
        tr
            th Description
            th Date of Purchase
            th Price
            th Download Link

mixin purchase_link_row(description, downloadurl, date, amount)
    tbody
        tr
            th 
                | #{description}
            th 
                | #{date}
            th 
                | #{amount}
            th 
                a(href="#{downloadurl}") download
