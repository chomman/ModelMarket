extends ../layout
include ../mixins
block content
    h2 #{user.username}
    div
        a.pure-button.pure-button-primary(href="/users/#{user.username}/edit") Edit Profile


    div
    h2 Models by this user:
    -each m in models
        mixin model_link(m.name, m.description, m.views, "/models/"+m._id)  

    h2 Models Starred by user:
    -each m in starred
        mixin model_link(m.name, m.description, m.views, "/models/"+m._id)
    p 
        | This is his page

    div
        a.pure-button.pure-button-primary(href="/users/#{user.username}/bank_info") Add Bank Info
